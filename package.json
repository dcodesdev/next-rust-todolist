{
  "name": "next-rust-todolist",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:server": "cd apps/server && cargo watch -q -c -x run",
    "dev:ui": "cd apps/ui && pnpm dev",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Server,UI\" -c \"yellow.bold,cyan.bold\" \"pnpm dev:server\" \"pnpm dev:ui\"",
    "build:ui": "cd apps/ui && pnpm build",
    "build:server": "cd apps/server && cargo build --release",
    "build": "pnpm build:ui & pnpm build:server",
    "start:server": "cd apps/server && cargo run --release",
    "start:ui": "cd apps/ui && pnpm start",
    "start": "concurrently -k -p \"[{name}]\" -n \"Server,UI\" -c \"yellow.bold,cyan.bold\" \"pnpm start:server\" \"pnpm start:ui\"",
    "migrate:run": "cd apps/server && cargo sqlx migrate run",
    "migrate:create": "cd apps/server && cargo sqlx migrate add -r",
    "db:create": "cd apps/server && cargo sqlx database create",
    "build:start": "pnpm build && pnpm start",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.2",
    "wait-on": "^7.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,json}": [
      "prettier --write"
    ]
  }
}
